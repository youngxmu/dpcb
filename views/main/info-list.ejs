<!DOCTYPE html>
<html>
<head>
	<%- include ../common/meta.ejs %>
	<title>资讯列表</title>
	<link rel="stylesheet" type="text/css" href="css/info.css">
</head>
<body>
	<div id="wrapper" class="container">
		<ul class="nav-panel">
			<li class="active" data-kind="1"><span>景区活动</span></li>
			<li data-kind="2"><span>周边活动</span></li>
			<li data-kind="3"><span>商家活动</span></li>
		</ul>
		<ul id="info_list" class="info-list"></ul>

	</div>
	<script type="text/juicer" id="info_list_tpl">
		{@each list as obj, index}
		<li data-id="${obj.iid}">
			<div class="pic">
				<img src="${index|getImgHost}${obj.pics}">
			</div>
			<div class="title">
				<span>${obj.title}</span>
				<span class="date-time">${obj.start}</span>
			</div>
			<div class="other">
				<span class="pageview">浏览${obj.pageview}次</span>
				<span class="btn-fav"></span>
				<span class="btn-share"></span>
			</div>
		</li>
		{@/each}
	</script>
	<script type="text/javascript" src='js/info-list.js'></script>
	<script type="text/javascript">
		$(document).ready(function(){
			moka.info.list.init();
		});
	</script>
</body>
</html>
