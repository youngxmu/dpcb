<!DOCTYPE html>
<html>
<head>
	<%- include ../common/meta.ejs %>
	<title>订单详情</title>
	<link rel="stylesheet" type="text/css" href="css/order.css">
</head>
<body>
	<input id="cid" type="hidden" value="<%= cid %>" >
	<input id="order_id" type="hidden" value="<%= oid %>" >
	<div id="wrapper" class="container">
		<div id="order_detail" class="order-detail"></div>
	</div>

	<script type="text/juicer" id="order_tpl">
		<div class="prod-info">
			<span class="pic">
				<div class="pic">$${spic|getPics}</div>
			</span>
			<div class="name">${tname}</div>
			<div class="count">X${tname}</div>
			<div class="price">总价：￥${tname}</div>
			<span class="single-price">￥${tname}</span>
		</div>
		<div class="order-info">
			<label>订单信息</label>
			<dl><span>订单号：</span>${tid}</dl>
			<dl><span>订单时间：</span>${ttime}</dl>
			<dl><span>使用时间：</span>${ttime}</dl>
		</div>
	</script>

	<script type="text/javascript" src='js/order-detail.js'></script>
	<script type="text/javascript">
		$(document).ready(function(){
			moka.order.detail.init();
		});
	</script>
</body>
</html>
