<!DOCTYPE html>
<html>
<head>
	<%- include ../common/meta.ejs %>
	<title>特色商品</title>
	<link rel="stylesheet" type="text/css" href="css/good.css">
</head>
<body>
	<input id="cid" type="hidden" value="<%= cid %>" >
	<div id="wrapper" class="container">
		<div class="list-panel">
			<ul id="good_list" class="good-list"></ul>
		</div>
	</div>
	<script type="text/juicer" id="good_list_tpl">
		{@each list as obj, index}
		<li data-id="${obj.sgid}">
			<div class="pic" data-id="${obj.iid}">$${obj.pics|getPics}</div>
			<div class="title">
				<span class="name">${obj.name}</span>
				<span class="no">编号：${obj.no}</span>
				<span class="price red-hlight">￥${obj.price}</span>
			</div>
			<div class="content">${obj.content|getContent}</div>
		</li>
		{@/each}
	</script>
	<script type="text/javascript" src='js/good-list.js'></script>
	<script type="text/javascript">
		$(document).ready(function(){
			moka.good.list.init();
		});
	</script>
</body>
</html>
